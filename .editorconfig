# ===============================
# EditorConfig configuration
# ===============================
root = true

# ===============================
# All files
# ===============================
[*]
charset = utf-8
indent_style = tab
indent_size = 4
tab_width = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# ===============================
# Pug templates
# ===============================
[*.pug]
indent_style = space
indent_size = 2
tab_width = 2
trim_trailing_whitespace = false

# ===============================
# Markdown
# ===============================
[*.md]
trim_trailing_whitespace = false
